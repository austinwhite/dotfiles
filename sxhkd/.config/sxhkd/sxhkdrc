XF86MonBrightnessUp
    xbacklight -inc 10

XF86MonBrightnessDown
    xbacklight -dec 10

super + shift + r
    killall sxhkd && sxhkd &

super + t
    exec alacritty

super + b
    exec brave

super + f
    exec alacritty -e ranger

super + shift + x
    exec lock-screen.sh

super + p
    rofi -show power-menu -modi power-menu:$HOME/.config/rofi/scripts/rofi-power-menu

super + d
    rofi -modi drun, run -show drun

super + alt + ctrl + 1
    exec just-laptop.sh

super + alt + ctrl + 2
    exec just-external.sh

super + alt + ctrl + 3
    exec both-monitors.sh
