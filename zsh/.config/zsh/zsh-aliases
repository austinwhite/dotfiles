# steal the good ones form here: https://github.com/ohmyzsh/ohmyzsh/tree/master/plugins/common-aliases

# shortcuts
alias v='nvim'
alias g='git'
alias d='docker'
alias projects='cd $HOME/Code'
alias dots='cd $HOME/.dotfiles/'

# print each PATH entry on a seperate line
alias path='echo -e ${PATH//:/\\n}'

# tmux should use config in ~/.config/tmux
alias tmux='tmux -f $HOME/.config/tmux/.tmux.conf'

# ls
alias ls='ls --color=auto'
alias la='ls -a --color=auto'
alias ll='ls -l --color=auto'
alias lla='ls -la --color=auto'
alias llrt='ls -lrt --color=auto'

# quicker navigation 
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ~='cd ~'
alias -- -='cd -'

# colorize grep
alias grep='grep --color=auto'

alias zshsource='source $DOTFILES/zsh/.config/zsh/.zshrc'
