# nvim config
export NVIMCONFIG="$XDG_CONFIG_HOME/nvim"

# deno
export DENO_INSTALL="$HOME/.deno"

# Java
export JAVA_HOME="/opt/homebrew/opt/openjdk@17"

# PATH
export PATH="$HOME/miniconda3/bin:$PATH"        # conda
export PATH="/var/lib/snapd/snap/bin:$PATH"     # snap packages
export PATH="$DENO_INSTALL/bin:$PATH"           # deno
export PATH="/opt/android-studio/bin:$PATH"     # android dev tools
export PATH="/opt/homebrew/bin:$PATH"       	  # homebrew
export PATH="/opt/homebrew/opt:$PATH"         	# homebrew

# node version manager
